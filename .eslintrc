{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "strict": 0,
      "arrow-parens": [
        "error",
        "always"
      ],
      "indent": ["error", 4],
      "react/jsx-indent": ["error", 4],
      "react/jsx-indent-props": ["error", 4],
      "max-len": [
        1,
        {
          "code": 120
        }
      ]
    }
}
